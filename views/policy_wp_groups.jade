extends layout

block content
  h2 Wordpress Groups
  form(action='/admin/wp_groups', method='POST')
    table.table.table-striped.table-hover.table-bordered
      thead
        tr
          th Auth Permission
          th WP Group Name
      tbody
        each group in groups
          tr
            td(style='vertical-align: middle;')= group.authGroup
            td
              input.form-control(type=text, name=group.authGroup, value=group.wpGroup)
    .text-right
      button.btn.btn-primary(type='submit', name='update') <i class="fa fa-pencil" aria-hidden="true"></i> Update