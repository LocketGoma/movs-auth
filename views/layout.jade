doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Moving Star Authentication Portal
    link(rel='stylesheet', type='text/css', href='/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/bootstrap-theme.min.css')
  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Moving Star Authentication Portal
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            if user
              li.dropdown
                a(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false').dropdown-toggle #{user.CharacterName} 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#')
                      img(src='https://image.eveonline.com/Character/#{user.CharacterID}_32.jpg')
                      |  #{user.CharacterName}
                  li.divider
                  li
                    a(href='/logout') Logout
            else
              li
                a(href='/login') LOGIN with EVE Online

    .container
      block content

    script(src='/js/jquery-1.12.0.min.js')
    script(src='/js/bootstrap.min.js')
