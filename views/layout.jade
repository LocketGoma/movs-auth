doctype html
html
  block head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Moving Star Authentication Portal
    link(rel='stylesheet', type='text/css', href='/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='/css/movs.css')

  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Moving Star Authentication Portal
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            if user
              if user.isAdmin
                li.dropdown
                  a(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false').dropdown-toggle <i class="fa fa-wrench" aria-hidden="true"></i> Administrative Tools&nbsp;
                    span.caret
                  ul.dropdown-menu
                    li.dropdown-header Member Management
                    li
                      a(href='/admin/member_permissions') <i class="fa fa-star" aria-hidden="true"></i> Member Permissions
                    li
                      a(href='/admin/member_locations') <i class="fa fa-location-arrow" aria-hidden="true"></i> Member Location Tracking
                    li
                      a(href='/admin/member_logins') <i class="fa fa-plane" aria-hidden="true"></i> Member Login Tracking
                    li.divider
                    li.dropdown-header Connected Service Management
                    li
                      a(href='/admin/member_services') <i class="fa fa-server" aria-hidden="true"></i> Connected Services
                    li.divider
                    li.dropdown-header Policy Management
                    li
                      a(href='/admin/wp_groups') <i class="fa fa-group" aria-hidden="true"></i> Wordpress Groups
              li.dropdown
                a(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false').dropdown-toggle <i class="fa fa-cog" aria-hidden="true"></i> #{user.name}&nbsp;
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#')
                      img(src='//image.eveonline.com/Character/#{user.characterID}_32.jpg')
                      |  #{user.name}
                  li.divider
                  li
                    a(href='/logout') <i class="fa fa-sign-out" aria-hidden="true"></i> Log Out

    .container
      block content
    footer
      .container
        .row.text-center
          p Copyright(C) 2016 Moving Star Corporation in EVE Online. All rights reserved.

    block scripts
      script(src='/js/jquery-1.12.0.min.js')
      script(src='/js/bootstrap.min.js')
