extends layout

block content
  h2 Movingstar Auth
  .panel.panel-default
    .panel-heading
      h3.panel-title Community
    .panel-body
      if service && service.community && service.community.activated
        p Community URL : community.movingstar.org
        p= service.community.id
        p= service.community.pass
        p
          a(href='/services/community_refresh') Refresh
      else
        p Community Service is not activated
        p
          a(href='/services/community_refresh') Activate
  .panel.panel-default
    .panel-heading
      h3.panel-title Mumble
    .panel-body
      p Mumble Service is not activated
  .panel.panel-default
    .panel-heading
      h3.panel-title Fleet Manager
    .panel-body
      p Fleet Manager Service is not activated
  .panel.panel-default
    .panel-heading
      h3.panel-title Jabber
    .panel-body
      p Jabber Service is not activated
